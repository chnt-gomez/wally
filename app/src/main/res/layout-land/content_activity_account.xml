<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wally.pocket.modules.account.ActivityAccount"
    tools:showIn="@layout/activity_account"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:drawablePadding="4dp"
        android:padding="8dp"
        android:id="@+id/tv_total_in_account"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_cash_multiple_grey600_18dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            custom:donut_text=".72 c"
            custom:donut_progress="30"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="4dp"

            android:padding="8dp"
            android:text="@string/spending_coeficient"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_small_spendings_18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    


</LinearLayout>
